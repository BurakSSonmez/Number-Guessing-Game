<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@color/colorPrimary"
    android:padding="20dp"
    >

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/oyunkucuk"
       android:layout_below="@id/uygulamaisimitxt"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="25dp"

       />

   <TextView
       android:id="@+id/uygulamaisimitxt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/say_tahmin_oyunu"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="35dp"
       android:textSize="22dp"
       android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/hesabımvarbuton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/i_have_account"
        android:background="@android:color/white"
        android:layout_above="@id/hesapoluşturbuton"
        android:layout_marginBottom="25dp"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/hesapoluşturbuton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_new_account"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textColor="@android:color/background_dark"
        />



</RelativeLayout>